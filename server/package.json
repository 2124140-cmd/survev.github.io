{
  "name": "@survev/server",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start:api": "NODE_ENV=production node --enable-source-maps dist/server/src/api/index.js",
    "start:game": "NODE_ENV=production node --enable-source-maps dist/server/src/gameServer.js",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:game\"",
    "dev:api": "tsx watch --include ../shared --include ./src src/api/index.ts",
    "dev:game": "tsx watch --include ../shared --include ./src src/gameServer.ts",
    "db:generate": "drizzle-kit generate --config=src/api/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=src/api/drizzle.config.ts",
    "db:seed": "tsx src/api/db/seed.ts",
    "db:studio": "drizzle-kit studio --config=src/api/drizzle.config.ts",
    "db:wipe": "rm -rf src/api/db/drizzle && tsx src/api/db/wipe.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.4",
    "@hono/zod-validator": "^0.2.2",
    "@lucia-auth/adapter-drizzle": "1.1.0",
    "arctic": "^1.9.2",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.7",
    "lucia": "3.2.2",
    "nanotimer": "^0.3.15",
    "pg": "^8.14.1",
    "proxycheck-ts": "^0.0.11",
    "redis": "^4.7.0",
    "slugify": "^1.6.6",
    "typescript": "^5.8.2",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.51.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/nanotimer": "^0.3.2",
    "@types/node": "^22.13.13",
    "@types/pg": "^8.11.11",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "unique-username-generator": "^1.4.0"
  }
}
