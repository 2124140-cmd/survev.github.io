{
  "name": "@survev/server",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start:api": "NODE_ENV=production node --enable-source-maps dist/server/src/apiServer.js --api-server",
    "start:game": "NODE_ENV=production node --enable-source-maps dist/server/src/gameServer.js --game-server",
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:game\"",
    "dev:api": "tsx watch --include \"../shared\" --include \"./src\" src/api/index.ts",
    "dev:game": "tsx watch --watch-preserve-output --watch-path=../shared --watch-path=./src src/gameServer.ts --game-server",
    "db:generate": "drizzle-kit generate --config=src/api/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=src/api/drizzle.config.ts",
    "db:seed": "tsx src/api/db/seed.ts",
    "db:studio": "drizzle-kit studio --config=src/api/drizzle.config.ts",
    "db:wipe": "rm -rf src/api/db/drizzle && bun run src/api/db/wipe.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.4",
    "@hono/zod-validator": "^0.2.2",
    "@lucia-auth/adapter-drizzle": "1.1.0",
    "arctic": "^1.9.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.7",
    "lucia": "3.2.2",
    "mysql2": "^3.12.0",
    "nanotimer": "^0.3.15",
    "typescript": "^5.8.2",
    "slugify": "^1.6.6",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.51.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/nanotimer": "^0.3.2",
    "@types/node": "^22.13.9",
    "ts-node": "^10.9.2",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2"
  }
}
